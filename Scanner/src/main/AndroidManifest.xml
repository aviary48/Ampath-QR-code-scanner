<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.morgan.barcodescannerapp.scanner"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="com.morgan.barcodescannerapp.scanner.ScanActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.morgan.barcodescannerapp.scanner.LoginActivity"
            android:label="@string/title_activity_login" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.morgan.barcodescannerapp.scanner.SignActivity"
            android:label="@string/title_activity_sign" >
            <intent-filter>
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <Provider android:name="content provider"
                android:authorities="com.paad.morgandatabaseProvider"/>

        </activity>
        <activity
            android:name="com.morgan.barcodescannerapp.scanner.entryActivity"
            android:label="@string/title_activity_entry" >
        </activity>
        <activity
            android:name="com.morgan.barcodescannerapp.scanner.tagqrActivity"
            android:label="@string/title_activity_staffqr" >
        </activity>
        <activity
            android:name="com.morgan.barcodescannerapp.scanner.compqrActivity"
            android:label="@string/title_activity_compqr" >
        </activity>
        <activity
            android:name="com.morgan.barcodescannerapp.scanner.visitorvalidation"
            android:label="visitorvalidation" >
        </activity>
        <activity
            android:name="com.morgan.barcodescannerapp.scanner.staffvalidationActivity"
            android:label="@string/title_activity_staffvalidation" >
        </activity>
        <activity
            android:name="com.morgan.barcodescannerapp.scanner.ExitActivity"
            android:label="@string/title_activity_exit" >
        </activity>
    </application>

</manifest>
